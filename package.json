{
	"name": "@parishconnect/monorepo",
	"private": true,
	"version": "0.0.0",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "cd packages/widget && bun run dev",
		"build": "bun run build:schema && bun run build:rrule && bun run build:widget",
		"build:schema": "cd packages/schema && bun run build",
		"build:rrule": "cd packages/rrule-converter && bun run build",
		"build:widget": "cd packages/widget && bun run build",
		"lint": "bun run lint:schema && bun run lint:rrule && bun run lint:widget",
		"lint:schema": "cd packages/schema && bun run lint",
		"lint:rrule": "cd packages/rrule-converter && bun run lint",
		"lint:widget": "cd packages/widget && bun run lint"
	}
}
